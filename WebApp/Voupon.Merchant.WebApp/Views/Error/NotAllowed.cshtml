@{
    ViewData["Title"] = "Access Denied";
}

<style>
    .btn-secondary {
        color: #fff;
        background-color: #ff407b;
        border-color: #ff407b;
        margin-top: 10px;
        font-size: 22px;
        width: 150px;
    }

    .img-fluid {
        width: auto;
        height: 100%;
        max-height: 250px;
        max-width: 100%;
    }
    .error-section-content {
        padding-top: 10px;
    }
    h2 {
        line-height: 1.2em;
        font-size: 36px;
    }
    h3 {
        font-size: 26px;
        font-weight: 400;
    }
    .container {
        padding-top: 20px;
        padding-bottom: 30px;
    }

</style>
<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="offset-xl-2 col-xl-8 offset-lg-2 col-lg-8 col-md-12 col-sm-12 col-12">
                <div class="error-section">
                    <img src="~/images/page404.png" alt="" class="img-fluid">
                    <div class="error-section-content">
                        <h2 class="display-5">Access Denied</h2>
                        <h3 class="display-7">You do not have access to this content. Please choose another direction.</h3>
                        <a href="Javascript:history.back()" class="btn btn-secondary btn-lg">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

