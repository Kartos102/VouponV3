@{
    ViewData["Title"] = "Invalid Request";
}

<style>
    .btn-secondary {
        color: #fff;
        background-color: #ff407b;
        border-color: #ff407b;
    }

    .img-fluid {
        width: 70%;
        height: auto;
    }
</style>
<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="offset-xl-2 col-xl-8 offset-lg-2 col-lg-8 col-md-12 col-sm-12 col-12">
                <div class="error-section">
                    <img src="~/images/page404.png" alt="" class="img-fluid">
                    <div class="error-section-content">
                        <h1 class="display-3">Invalid Request</h1>
                        <p>The server cannot process the request due to something that is perceived to be a client error. Go back to choose a new direction.</p>
                        <a href="Javascript:history.back()" class="btn btn-secondary btn-lg">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

