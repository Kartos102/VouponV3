@model int;
@using System.Security.Claims

@{
    ViewData["Title"] = "Digital";
    Layout = "~/Areas/App/Views/Shared/_Layout.cshtml";
    var identity = User.Identity as ClaimsIdentity;
}

<div class="dashboard-main-wrapper">
    <div class="dashboard-ecommerce">
        <div class="container-fluid dashboard-content ">
            <div class="ecommerce-widget">
                <div class="row justify-content-between table-function">
                    <div class="row">
                        <label class="col-form-label">Date Range: </label>
                        <input type="date" id="digitalStartDate" value="2017-06-01"> to
                        <input type="date" id="digitalEndDate" value="2017-06-01">
                        <br />
                        <button type="button" id="digitalSearch" class="btn btn-primary btn-sm digitalSearch">Search</button>
                    </div>
                    <div>
                        <button type="button" class="digitalFullReport btn btn-primary btn-sm">View Full Report</button>
                        @*<label class="col-form-label">Send report to : </label>
                    <input type="text" placeholder="Enter Email"> <button type="button" class="btn btn-primary btn-sm">Send</button>*@
                    </div>
                </div>
                <div class="row" style="margin-top:30px;">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body p-0">
                                <div class="table-responsive" style="overflow-x: hidden;">
                                    <table class="table table-striped table-bordered table-hover" id="digitalTable" style="text-align: center;">
                                        <thead class="bg-light">
                                            <tr class="border-0">
                                                <th class="border-0" style="text-align: center;">Products</th>
                                                <th class="border-0" style="text-align: center;">Revenue (RM)</th>
                                                <th class="border-0" style="text-align: center;">Transactions</th>
                                            </tr>
                                        </thead>
                                        <tbody id="digitalTableBody">
                                            <tr style="display:none">
                                                <td>Coffee</td>
                                                <td>859.20</td>
                                                <td>10</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="createGifteeTokenModalDigital" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle">Update Token</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="message-text" class="col-form-label">Are you sure you want to create Giftee voucher for this item?</label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnCreatDigital">Create</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="updateTokenModalDigital" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle">Update Token</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>

            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Token:</label>
                        <input type="text" class="form-control" id="txtTokenDigital">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnUpdateDigital">Update</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="showDetailsModalDigital" role="dialog">
    <div class="modal-dialog modal-dialog-centered" style="max-width:800px">
        <div class="modal-content">
            <div class="modal-header">
