@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Voupon.Rewards.WebApp.Services.Profile.Page.ProfilePointsViewModel
    <style>
        @@media (min-width: 1024px) {
            footer {
                display: none;
            }
        }
    </style>
    <div class="user-page">
        <div class="user-page-left-spacing">
        </div>
        <div class="user-page-right row mt-4 mb-4">
            <div class="col-lg-12">
                <div class="text-center align-center">
                    <div class="col-12">
                        <h1>Your VPoints History</h1>
                    </div>
                    <div class="col-12 mt-2 row justify-center">
                        <div class="points-table top-purple-border col-lg-7 col-md-8 col-12">
                            <div>
                                <div class="table-header">
                                    <div class="row">
                                        <div class="col-8" style="text-align:left">Remark</div>
                                        <div class="col-4">Points</div>
                                    </div>
                                </div>
                                <div class="table-body">
                                    <div class="row">
                                        <div class="col-8" style="text-align:left">VPoints Gained from Surveys</div>
                                        <div class="col-4">@Model.ResponseCollectedPoints</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-8" style="text-align:left">Demographic VPoints</div>
                                        <div class="col-4">@Model.DemographicPoints</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-8" style="text-align:left">Bonus VPoints</div>
                                        <div class="col-4">@Model.BonusPoints</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-8" style="text-align:left">Used VPoints</div>
                                        <div class="col-4"><span class="text-danger">(@Model.UsedPoints)</span></div>
                                    </div>
                                    <div class="row">
                                        <div class="col-8" style="text-align:left">VPoints Onhold</div>
                                        <div class="col-4"><span class="text-danger">(@Model.PointsOnHold)</span></div>
                                    </div>
                                </div>
                                <div class="table-footer">
                                    <div class="row">
                                        <div class="col-8" style="text-align:left"><strong>Available VPoints</strong></div>
                                        <div class="col-4"><strong>@Model.AvailablePoints</strong></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <script>
            if ($(window).width() > 1023) {
                $("#profile-menu").addClass("widescreen-profile-menu");
                $("#page-wrapper").css("min-height", $(".widescreen-profile-menu").css("height"));
            }
        </script>
